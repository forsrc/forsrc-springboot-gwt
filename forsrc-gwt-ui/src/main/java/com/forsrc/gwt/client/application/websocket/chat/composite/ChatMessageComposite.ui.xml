<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
       xmlns:g="urn:import:com.google.gwt.user.client.ui"
       xmlns:m="urn:import:gwt.material.design.client.ui"
       xmlns:m.html="urn:import:gwt.material.design.client.ui.html"
       xmlns:ma="urn:import:gwt.material.design.addins.client">

    <g:HTMLPanel>

        <m:MaterialRow marginBottom="0">
            <m:MaterialImage ui:field="image" backgroundColor="BLUE" marginTop="8" width="40px" height="40px" shadow="1" circle="true" url="https://mir-s3-cdn-cf.behance.net/project_modules/disp/6ba40822433737.5632180017216.png"/>
            <ma:bubble.MaterialBubble ui:field="bubble" textColor="WHITE" >
                <m:MaterialPanel ui:field="message" fontSize="1em" />
                <m:MaterialLabel ui:field="time" text="0000-00-00 00:00:00" fontSize="0.5em" float="RIGHT"/>
            </ma:bubble.MaterialBubble>
        </m:MaterialRow>

    </g:HTMLPanel>
</ui:UiBinder>
