<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:m='urn:import:gwt.material.design.client.ui'
             xmlns:m.table='urn:import:gwt.material.design.client.ui.table'>

  <g:HTMLPanel>
    <m:MaterialButton text="Go to first page" ui:field="btnGotoFirstPage"/>
    <m:MaterialButton text="Go to last page" ui:field="btnGotoLastPage" />
    <m.table:MaterialDataTable shadow="1"
                                marginTop="20"
                                ui:field="table"
                                height="100%"
                                useStickyHeader="true"
                                useCategories="false"
                                useRowExpansion="true"
                                selectionType="MULTIPLE"/>
    </g:HTMLPanel>
</ui:UiBinder>